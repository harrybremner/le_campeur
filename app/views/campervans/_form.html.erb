<div class="form-image">
  <div class="container">
    <div class="row">
      <div class="col">
        <div class="container-form" >
          <div class="form-header">
            Add a camper
          </div>
          <%= simple_form_for(@campervan) do |f| %>
            <div class="row">
              <div class="col">
                <%= f.input :camper_type %>
              </div>
              <div class="col">
                <%= f.input :camper_make %>
              </div>
            </div>
            <div class="row">
              <div class="col">
                <%= f.input :total_occupancy %>
              </div>
              <div class="col">
                <%= f.input :total_beds %>
              </div>
            </div>

            <div class="col">
              <%= f.input :description %>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :has_bathroom %>
                <%= f.input :has_shower %>
                <%= f.input :has_kitchen %>
              </div>
              <div class="col">
                <%= f.input :has_internet %>
                <%= f.input :has_tv %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :region %>
              </div>
              <div class="col">
                <%= f.input :address,
                input_html: {data: {address_autocomplete_target: "address"}, class: "hidden"},
                wrapper_html: {data: {controller: "address-autocomplete",
                address_autocomplete_api_key_value:
                ENV["MAPBOX_API_KEY"]}} %>
              </div>
            </div>

            <div class="row">
              <div class="col">
                <%= f.input :price %>
              </div>
              <div class="col">
                <%= f.input :photo, as: :file %>
              </div>
            </div>
            <%= f.submit class: "btn-form" %>
          <% end %>
        </div>
      </div>
      <div class="col">
      </div>
    </div>
  </div>
</div>
