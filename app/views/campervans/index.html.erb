    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="https://www.howdens.com/-/media/howdens/assets/clh_asset_corporate/clh_asset_levela_109324/clh_asset_levelb_25298484/clh_asset_levelc_25363632/clh_asset_leveld_25448669/ass_25448671/ass_25448671_1_1.jpg" class="d-block w-100 camper-images">
      </div>
      <div class="carousel-item">
        <img src="https://www.howdens.com/-/media/howdens/assets/clh_asset_corporate/clh_asset_levela_109324/clh_asset_levelb_25298484/clh_asset_levelc_25363632/clh_asset_leveld_25448669/ass_25448671/ass_25448671_1_1.jpg" class="d-block w-100 camper-images">
      </div>
      <div class="carousel-item">
        <img src="https://www.howdens.com/-/media/howdens/assets/clh_asset_corporate/clh_asset_levela_109324/clh_asset_levelb_25298484/clh_asset_levelc_25363632/clh_asset_leveld_25448669/ass_25448671/ass_25448671_1_1.jpg" class="d-block w-100 camper-images">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
