
<div class="camper-banner mb-4 d-flex align-items-center justify-content-center">
  <div class="text-left text-white">
    <div class="container">
      <div class="hero-text">
        <h1>Campers</h1>
      </div>
    </div>
  </div>
</div>


 <div class="cards-demo">
      <% @campervans.each do |campervan|%>
        <div class="card-demo">
           <%= link_to campervan_path(campervan) do %>
            <%# image %>
            <div class="carousel-image img">
              <%= cl_image_tag campervan.photo.key %>
            </div>
            <div class="card-info-container">

              <div class="owner-div" >
                <p style="margin:0">Owner: <%= campervan.user.first_name + " " +campervan.user.last_name %> </p>
              </div>

              <div class="info-div">
                <p style="margin:0" ><i class="fa-solid fa-person"></i> <%= campervan.total_occupancy %> </p>
                <p style="margin:0"><i class="fa-solid fa-bed"></i> <%= campervan.total_beds %> </p>
                <p style="margin:0"><i class="fa-solid fa-location-dot"></i><%= campervan.region %></p>
              </div>

              <div class="booking-btn">

                <p style="margin:0"> <strong>Â£<%= campervan.price.to_i %></strong> / night </p>
                <%= link_to "Book Now!", new_campervan_booking_path(campervan), class: "btn btn-ghost" %>
              </div>

            </div>
          <%end%>
        </div>
      <%end%>
  </div>
</div>
