<div class="container">
<br>
<div class="d-flex justify-content-center">
    <div class="card" style="width: 50rem;">
      <div class="text-center">
    <h1><%= @campervan.camper_type %></h1>
          <div class="card-img-top">
            <% if @campervan.photo.key %>
                  <%= cl_image_tag @campervan.photo.key, height: 300, width: 400, crop: :fill %>
            <%end%>
          </div>

        <div class="card-body">
          <h1><%= @campervan.camper_make %> </h1>
          <div class="border-bottom"></div>
          <div class="d-flex justify-content-between">

            Capacity:
            <h2>
            <% (@campervan.total_occupancy).times do %>
            <i class="fa-solid fa-person"></i>
            <%end%>
            </h2>

            Beds:
            <h2>
            <% (@campervan.total_beds).times do %>
            <i class="fa-solid fa-bed"></i>
            <%end%>
            </h2>

            Amneties:
            <h2>
              <% if @campervan.has_bathroom %>
                <i class="fa-solid fa-toilet"></i>
                <% end %>
              <% if @campervan.has_shower %>
                <i class="fa-solid fa-shower"></i>
              <% end %>
              <% if @campervan.has_kitchen %>
                <i class="fa-solid fa-kitchen-set"></i>
              <% end %>
              <% if @campervan.has_internet %>
                <i class="fa-solid fa-wifi"></i>
              <% end %>
              <% if @campervan.has_tv %>
                <i class="fa-solid fa-tv"></i>
              <% end %>
            </h2>
            </div>
          </div>
            <h2 class="card-trip-pricing"><span class="badge bg-secondary"> £<%= @campervan.price.to_i %> / night</span></h2>
        <%= link_to "Book this camper!", new_campervan_booking_path(@campervan), class: "btn btn-flat" %>
        <%= link_to "Edit", edit_campervan_path(@campervan), class: "btn btn-flat"%>
      </div>
        <div style="width: 100%; height: 600px;"
          data-controller="map"
          data-map-markers-value="<%= @markers.to_json %>"
          data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    </div>

      <div class="container">
        <div class="form-wrapper" style="width: 400px; margin: 0 auto;">
          <h2>Booking form</h2>

          <%= simple_form_for [@campervan, @booking] do |f| %>
            <%= f.input :start_date, as: :date, required: false, input_html: {id: "datepicker"} %>
            <%= f.input :end_date, as: :date, required: false, input_html: {id: "range_end"} %>
            <%= f.button :submit, "Make Booking", class: "btn btn-primary" %>
          <% end %>
          <br>
            <p>Total price = £<%= @campervan.price %></p>
        </div>
      </div>

 </div>
</div>
