<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-left text-white">
    <div class="container">
      <div class="hero-text">
      <% if current_user %>
        <h1 class="typed-js">Hey, <%= @user.first_name %>. Book your next camper adventure now!</h1>
      <% else %>
        <h1 class="typed-js">Don't just imagine; book your next camper adventure now!</h1>
      <% end %>
      </div>
    </div>
    <div class="container" >
      <%= form_tag campervans_path, method: :get, class: "d-flex search-form" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",

          placeholder: "Search for campers near you." %>
          <%# , input_html: {data: {address_autocomplete_target: "address"}},
                wrapper_html: {data: {controller: "address-autocomplete",
                address_autocomplete_api_key_value:
                ENV["MAPBOX_API_KEY"]}}  %>
        <%= submit_tag "Search", class: "btn btn-flat" %>
      <% end %>
      <br>
    </div>
  </div>
</div>
