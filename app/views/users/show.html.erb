<div class="container">
  <div class="user-profile">

    <div class="cards-user2 row justify-content-evenly">

      <div class="card-category">
      <br>
      <h2 class="userh2">My Profile</h2>
        <% if @user.photo.key %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <p><%= @user.first_name %> <%= @user.last_name %></p>
        <p><%= @user.email %> </p>
        <p>Created on <%= @user.created_at.mday %>/<%= @user.created_at.month %>/<%= @user.created_at.year %></p>
        <%= link_to "Edit Profile", edit_user_registration_path(current_user)%>
      </div>

      <div class="border cards-user2 row justify-content-evenly">
        <h2 class="userh2">My Campervans</h2>
              <%= link_to "Add campervan", new_campervan_path(), class: "btn btn-ghost" %>
              <% @campervans.each do |campervan|%>
        <div class="">
          <div class="">
            <div class="card-category col-4 user-card">
                  <% if campervan.photo.key %>
                      <%= cl_image_tag campervan.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                  <% end %>
                  <%= link_to campervan.camper_make, campervan_path(campervan) %>
                  <%= link_to "Delete", campervan_path(campervan), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
              <% end %>
      </div>

    </div>
      <div class="border">
        <h2 class="userh2">My Bookings</h2>
              <% @bookings.each do |booking|%>
        <div class="flex-container justify-content-evenly">
          <div class="card-category col-12">
                <%= booking.campervan.camper_type %>
                <% if booking.campervan.photo.key %>
                    <%= cl_image_tag booking.campervan.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <% end %>
                <p>Booking begins on <%= booking.start_date  %></p>
                <p>Booking ends on <%= booking.end_date %></p>
                <p>Total price for trip = Â£<%= booking.total_price  %></p>
                <%= link_to "See campervan", campervan_path(booking.campervan) %>
                <%= link_to "Edit booking", edit_campervan_booking_path(booking) %>
                <%= link_to "Delete booking", booking_path(booking), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
              <% end %>
      </div>

  </div>
</div>
