<div class="container">
  <div class="user-profile">

    <div class="cards row justify-content-evenly">

      <div class="card-category">
      <br>
      <h2>My Profile</h2>
        <% if @user.photo.key %>
          <%= cl_image_tag current_user.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>
        <p><%= @user.first_name %> <%= @user.last_name %></p>
        <p><%= @user.email %> </p>
        <p>Created at <%= @user.created_at %> </p>
        <%= link_to "Edit Profile", edit_user_registration_path(current_user)%>
      </div>

      <div class="border">
        <h2>My Campervans</h2>
              <% @campervans.each do |campervan|%>
        <div class="cards row justify-content-evenly">
          <div class="card-category col-4">
                <% if campervan.photo.key %>
                    <%= cl_image_tag campervan.photo.key, class: "avatar-large dropdown-toggle", id: "navbarDropdown", data: { bs_toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
                <% end %>
                <%= link_to campervan.camper_make, campervan_path(campervan) %>
                <%= link_to "Delete", campervan_path(campervan), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
              <% end %>
      </div>

    </div>
  </div>
</div>
